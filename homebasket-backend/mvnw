#!/bin/sh
# Maven Wrapper shell script
MVNW_REPOURL="https://repo.maven.apache.org/maven2"
MVNW_VERSION="3.9.6"
MVNW_DIR=".mvn/wrapper"
MVNW_JAR="$MVNW_DIR/maven-wrapper.jar"
MVNW_PROPERTIES="$MVNW_DIR/maven-wrapper.properties"
MVNW_DOWNLOAD_URL="https://repo.maven.apache.org/maven2/org/apache/maven/wrapper/maven-wrapper/3.2.0/maven-wrapper-3.2.0.jar"

mkdir -p "$MVNW_DIR"
if [ ! -f "$MVNW_JAR" ]; then
  echo "Downloading Maven Wrapper..."
  curl -s -o "$MVNW_JAR" "$MVNW_DOWNLOAD_URL"
fi

exec java -Dmaven.multiModuleProjectDirectory="$PWD" -cp "$MVNW_JAR" org.apache.maven.wrapper.MavenWrapperMain "$@"
